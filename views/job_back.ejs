  <br>
  <br>
  <br>











  <div class="container">
    <div class="home">
      <a href="/search" style="color: #007bff;">大學生打工趣</a> / <a href=""
        style="color:#007bff;"><%= jobInfo[0].jobName %></a>
    </div>

    <div class="imgsizecontrol ">
      <img src="img/companyintrophoto/<%= jobInfo[0].companyPhoto1 %>" alt="">
    </div>



    <div class="s1 row">
      <!-- 標題區 -->

      <div class="col-6">
        <h5 class="main_title"> <%=  jobInfo[0].jobName %> </h5>
        <%= jobInfo[0].cityName %><%= jobInfo[0].townshipName %>/<a href="#"><%= jobInfo[0].companyName  %></a>

      </div>
      <!-- 標題區 -->


      <!-- 按鈕區 -->
      <div class="text-right col-6 ">
        <input type="text" name="" id="userCharacter" class="d-none" value="<%= sessionUserCharacter %>">
        <input type="text" name="" id="memberId" class="d-none" value="<%= sessionUserId %>">
        <input type="text" name="" id="jobId" class="d-none" value="<%= jobInfo[0].jobId %>">
        <% if(collection.length == 0){ %>
        <div class=" btnlayJ">
          <div style="display: inline-block;" class="align-middle">
            <button class="favorite-button" id="ctrlCollect">
              <div class="icon">
                <div class="star"></div>
              </div>
              <span>收藏</span>
            </button>
          </div>
          <% }else{ %>
          <div class=" btnlayJ">
            <div style="display: inline-block;" class="align-middle">
              <button class="favorite-button active" id="ctrlCollect">
                <div class="icon">
                  <div class="star"></div>
                </div>
                <span>收藏</span>
              </button>
            </div>
            <% } %>
            &emsp;

            <% if (sessionUserCharacter == "Guest"){ %>
            <a href="/signinstudent"><button id="btSend" type="button" class="btn btn-common btn-job align-middle"
                style="color:white;display: inline-block">應徵</button></a>
            <% }else{ %>
            <% if(sessionUserCharacter == "student"){ %>
            <button id="btSend" type="button" data-toggle="modal" data-target="#sendResumeBox"
              class="btn btn-common btn-job align-middle" style="color:white;display: inline-block">應徵</button>
            <%  } %>
            <% if(sessionUserCharacter == "company"){ %>
            <button id="companyReject" type="button" class="btn btn-common btn-job align-middle"
              style="color:white;display: inline-block">應徵</button>
            <% } %>

            <% } %>
          </div>
          <!-- 按鈕區 -->

        </div>

      </div>



      <div class="s2">
        <h5 class="title">實習介紹</h5>

        <hr class="mb-4 mt-1 ml-3 mr-3">

        <section class="content">
          <h5>工作內容：</h5>
          <div class="pl-3">
            <%- jobInfo[0].jobContent.replace(/(\r\n)|(\n)/g,'<br>') %>
          </div>
          <br>

          <h5>薪水待遇：</h5>
          <div class="pl-3">
            <%- jobInfo[0].jobPay.replace(/(\r\n)|(\n)/g,'<br>') %>
          </div>
        </section>
        <br>
      </div>

      <div class="s2_5">
        <h5 class="title">實習期間</h5>

        <hr class="mb-4 mt-1 ml-3 mr-3">
        <p class="content"><%= jobInfo[0].jobStartTimeF %> ~ <%= jobInfo[0].jobEndTimeF %></p>
        <br>
      </div>

      <div class="s3">
        <h5 class="title">條件要求</h5>

        <hr class="mb-4 mt-1 ml-3 mr-3">

        <section class="content">
          <div class="pl-3">
            <%- jobInfo[0].jobCondition.replace(/(\r\n)|(\n)/g,'<br>') %>
          </div>
        </section>
        <br>
      </div>
      <div class="s4">
        <h5 class="title">公司環境照片</h5>

        <hr class="mb-4 mt-1 ml-3 mr-3">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="img/companyintrophoto/<%= jobInfo[0].companyPhoto2 %>" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="img/companyintrophoto/<%= jobInfo[0].companyPhoto3 %>" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="img/companyintrophoto/<%= jobInfo[0].companyPhoto4 %>" alt="Third slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="img/companyintrophoto/<%= jobInfo[0].companyPhoto5 %>" alt="Fourth slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="img/companyintrophoto/<%= jobInfo[0].companyPhoto1 %>" alt="Fifth slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <br>
      </div>
      <div class="s5" style="margin-bottom: 20px;">
        <h5 class="title">公司地址</h5>
        <hr class="mb-2 mt-1 ml-3 mr-3">
        <section class="content">
          <div class="pl-3">
            <%= jobInfo[0].jobAddress  %>
          </div>
        </section>

        <iframe width="100%" height="400" frameborder="0" style="border:0"
          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCs3zg4d-_F5M_pQY5I_ZRjmPRDnz7galk&q=<%= jobInfo[0].jobAddress %>"
          allowfullscreen>
        </iframe>
        <br>
      </div>

    </div>
    <!-- Footer Section Start -->
    <footer class="footer-area section-padding">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="footer-text text-center wow fadeInDown" data-wow-delay="0.3s">
              <ul class="social-icon">
                <li>
                  <a class="facebook" href="#"><i class="icon-social-facebook"></i></a>
                </li>
                <li>
                  <a class="twitter" href="#"><i class="icon-social-twitter"></i></a>
                </li>
                <li>
                  <a class="instagram" href="#"><i class="icon-social-instagram"></i></a>
                </li>
                <li>
                  <a class="instagram" href="#"><i class="icon-social-linkedin"></i></a>
                </li>
                <li>
                  <a class="instagram" href="#"><i class="icon-social-google"></i></a>
                </li>
              </ul>
              <p>實習趣. 版權所有</p>

            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- Footer Section End -->

    <!-- Go to Top Link -->
    <a href="#" class="back-to-top">
      <i class="icon-arrow-up"></i>
    </a>



    <!-- 應徵對話框 -->

    <div class="modal fade" id="sendResumeBox" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">確認履歷</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body resumeBody">
            <h4>實習名稱：<%= jobInfo[0].jobName %></h4>

            <h5 class="mt-3">選擇履歷：</h5>

            <% userResume.forEach(function(userResume){ %>
            <!-- 一組履歷選擇 -->
            <div>
              <input type="radio" name="whichResune" value="<%= userResume.resumeId %>" id="resume<%= userResume.resumeId %>" class="ml-3 resumeRadio">
              <label for="resume<%= userResume.resumeId %>" class="resumeRadioText"><%= userResume.resumeName %></label>
            </div>
            <!-- 一組履歷選擇End -->
            <div>
              <% }) %>
              <h5 class="mt-3">留言給廠商：</h5>
              <textarea name="" id="msgForCompany" cols="45" rows="5" class="ml-3"></textarea>



            </div>
          
          </div>

          <div class="modal-footer">
            <!-- <button type="button" class="btn btn-common-outline" data-dismiss="modal">取消</button> -->
            <button type="button" class="btn btn-common" data-dismiss="modal" id="sendResune">送出履歷</button>
          </div>

        
        </div>
      </div>
    </div>
    <!-- 應徵對話框End -->







    <!-- ajax request -->
    <script src="js/ajaxrequest/collectjob.js"></script>
    <script src="js/ajaxrequest/sendresume.js"></script>

