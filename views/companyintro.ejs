  <div class="container">
    <div class="home">
      <a href="/search" style="color: #007bff;">大學生打工趣</a> / <a href=""
        style="color:#007bff;"><%= companyInfo[0].companyName %></a>
    </div>

    <div class="imgsizecontrol ">
      <% if(companyInfo[0].companyPhoto1){ %>

      <img src="img/companyintrophoto/<%= companyInfo[0].companyPhoto1 %>" alt="">
      <% }else{ %>
      <img src="img/companyintrophoto/defaultlogo.png" alt="">
      <% } %>
    </div>



    <div class="s1-1 row">
      <div class="col-12" style="padding: 0px;">
        <h5 class="title">公司資訊</h5>
      </div>
      <div class=" col-4  mb-3 logoImg">
        <% if(companyInfo[0].companyLogo){ %>

        <img src="img/companyLogo/<%= companyInfo[0].companyLogo %>" alt="">
        <% }else{ %>
        <img src="img/companyLogo/defaultlogo.png" alt="">
        <% } %>
      </div>
      <div class="col-3  mb-3 introTextBox">
        <div class="row">
          <div class="introItem col-12">
            <div>
              公司名稱：
            </div>
            <div class="ml-4 mt-2">
              <%= companyInfo[0].companyName %>
            </div>
          </div>
          <div class="introItem col-12">
            <div>
              公司電話：
            </div>
            <div class="ml-4 mt-2">
              <%= companyInfo[0].companyPhone %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-3  mb-3 introTextBox2">
        <div class="row">
          <div class="introItem col-12">
            <div>
              公司信箱：
            </div>
            <div class="ml-4 mt-2">
              <%= companyInfo[0].companyEmail %>
            </div>
          </div>
          <div class="introItem col-12">
            <div>
              公司地址：
            </div>
            <div class="ml-4 mt-2">
              <%= companyInfo[0].companyAddress %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-2  mb-3">

      </div>


    </div>



    <div class="s2">
      <h5 class="title">公司介紹</h5>

      <hr class="mb-4 mt-1 ml-3 mr-3" style="width: 97%; height: 2px; border: none; background-color: #3c77b2">

      <p class="content"> <%- companyInfo[0].companyIntro.replace(/(\r\n)|(\n)/g,'<br>') %></p>
      <br>
    </div>

    <div class="s2_5">
      <h5 class="title">公司刊登職缺</h5>

      <hr class="mb-4 mt-1 ml-3 mr-3" style="width: 97%; height: 2px; border: none; background-color: #3c77b2">
      
      <div class="pl-5 pr-5">
        <% jobInfo.forEach(function(jobInfo){ %>
        <div class="row searchResultCard mb-3">
          <div class="col-4">
            <div class="jobClessShow"><%= jobInfo.jobClassName %></div>
            <div><%= jobInfo.jobName %></div>
          </div>
          <div class="col-3"><%= jobInfo.companyName %></div>
          <div class="col-2"><%= jobInfo.cityName %><%= jobInfo.townshipName %></div>
          <div class="col-2"><%= jobInfo.jobAddTime %></div>
          <div class="col-1">
            <div class="applyBtn mt-1" style="margin-left: -20px;">
              <a href="/job?id=<%= jobInfo.jobId %>">
                <div class="applyBtnTop">
                  <div class="applyBtnPaper"></div>
                  <div class="applyBtnText">應徵</div>
                </div>
                <div class="applyBtnSec"></div>
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <br>
    </div>



    <div class="s4">
      <h5 class="title">公司環境照片</h5>

      <hr class="mb-4 mt-1 ml-3 mr-3" style="width: 97%; height: 2px; border: none; background-color: #3c77b2">

      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% if(companyInfo[0].companyPhoto1){ %>
              <img class="d-block w-100" src="img/companyintrophoto/<%= companyInfo[0].companyPhoto1 %>" alt="請放置圖片">
            <% }else{ %>
              <img class="d-block w-100" src="img/companyintrophoto/default.jpg" alt="請放置圖片">
            <% } %>
          </div>
          <div class="carousel-item">
            <% if(companyInfo[0].companyPhoto2){ %>
              <img class="d-block w-100" src="img/companyintrophoto/<%= companyInfo[0].companyPhoto2 %>" alt="請放置圖片">
            <% }else{ %>
              <img class="d-block w-100" src="img/companyintrophoto/default.jpg" alt="請放置圖片">
            <% } %>
          </div>
          <div class="carousel-item">
            <% if(companyInfo[0].companyPhoto3){ %>
              <img class="d-block w-100" src="img/companyintrophoto/<%= companyInfo[0].companyPhoto3 %>" alt="請放置圖片">
            <% }else{ %>
              <img class="d-block w-100" src="img/companyintrophoto/default.jpg" alt="請放置圖片">
            <% } %>
          </div>
          <div class="carousel-item">
            <% if(companyInfo[0].companyPhoto4){ %>
              <img class="d-block w-100" src="img/companyintrophoto/<%= companyInfo[0].companyPhoto4 %>" alt="請放置圖片">
            <% }else{ %>
              <img class="d-block w-100" src="img/companyintrophoto/default.jpg" alt="請放置圖片">
            <% } %>
          </div>
          <div class="carousel-item">
            <% if(companyInfo[0].companyPhoto5){ %>
              <img class="d-block w-100" src="img/companyintrophoto/<%= companyInfo[0].companyPhoto5 %>" alt="請放置圖片">
            <% }else{ %>
              <img class="d-block w-100" src="img/companyintrophoto/default.jpg" alt="請放置圖片">
            <% } %>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <br>
    </div>
    <div class="s5" style="margin-bottom: 20px;">
      <h5 class="title">公司地址</h5>
      <hr class="mb-2 mt-1 ml-3 mr-3" style="width: 97%; height: 2px; border: none; background-color: #3c77b2">
      <section class="content">
        <div class="pl-3">
          <%= companyInfo[0].companyAddress %>
        </div>
      </section>

      <iframe width="100%" height="400" frameborder="0" style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCs3zg4d-_F5M_pQY5I_ZRjmPRDnz7galk&q=<%= companyInfo[0].companyAddress %>"
        allowfullscreen>
      </iframe>
      <br>
    </div>

  </div>
  <!-- Footer Section Start -->
  <footer class="footer-area section-padding">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="footer-text text-center wow fadeInDown" data-wow-delay="0.3s">
            <ul class="social-icon">
              <li>
                <a class="facebook" href="#"><i class="icon-social-facebook"></i></a>
              </li>
              <li>
                <a class="twitter" href="#"><i class="icon-social-twitter"></i></a>
              </li>
              <li>
                <a class="instagram" href="#"><i class="icon-social-instagram"></i></a>
              </li>
              <li>
                <a class="instagram" href="#"><i class="icon-social-linkedin"></i></a>
              </li>
              <li>
                <a class="instagram" href="#"><i class="icon-social-google"></i></a>
              </li>
            </ul>
            <p>實習趣. 版權所有</p>

          </div>
        </div>
      </div>
    </div>
  </footer>
